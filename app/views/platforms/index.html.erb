<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <%=image_tag 'hound', width:'100%', style: 'position:absolute; right: 0' -%>
    </div>

    <div class=" col-sm-7 col-sm-offset-3 col-md-8 col-md-offset-2 main">
      <h2 class="sub-header">Convox Racks: </h2>




      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Login</th>
            <th>Auth code</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @platforms.each do |platform| %>
            <tr>
              <td><%= button_to "Manage Applications (#{platform.apps.count})", platform_apps_path(platform), method: :get, class: 'btn btn-xs btn-info' %></td>
              <td><%= platform.name %></td>
              <td><%= platform.login %></td>
              <td><%= "*"*10 %></td>
              <td><%= link_to 'Show', platform %></td>
              <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
              <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= button_to 'New Convox Rack', new_platform_path, class: 'btn btn-primary', data: {confirm: 'Do not connect to a production instance!'}, method: :get %>
    </div>
  </div>
</div>

